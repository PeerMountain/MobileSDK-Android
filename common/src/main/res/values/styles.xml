<resources>
    <!-- Base application theme. -->
    <style name="PmCoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="camera_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/pm_margin_normal</item>
    </style>


    <style name="camera_extra_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:padding">@dimen/pm_margin_small</item>
        <item name="android:layout_margin">@dimen/pm_margin_normal</item>
        <item name="android:background">@drawable/pm_btn_primary_selector</item>
        <item name="android:textColor">@color/pm_share_text</item>
    </style>
</resources>
