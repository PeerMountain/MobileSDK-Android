<resources>


    <style name="pm_id_tv">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/pm_margin_normal</item>
        <item name="android:textColor">@color/pm_text_color_dark</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="pm_id_iv">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pm_scanned_id_image_height</item>
        <item name="android:layout_marginTop">@dimen/pm_margin_normal</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
