<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/pm_margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSaveForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pm_btn_primary_selector"
                android:padding="@dimen/pm_margin_small"
                android:text="@string/pm_btn_save_form"
                android:textColor="@color/pm_share_text"/>

            <Button
                android:id="@+id/btnSendForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pm_btn_primary_selector"
                android:layout_marginLeft="@dimen/pm_margin_big"
                android:padding="@dimen/pm_margin_small"
                android:text="@string/pm_btn_send_form"
                android:textColor="@color/pm_share_text"/>
        </LinearLayout>

        <com.peermountain.core.views.PeerMountainTextView
            android:id="@+id/tvAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pm_margin_normal"
            tools:text="alalalal"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>