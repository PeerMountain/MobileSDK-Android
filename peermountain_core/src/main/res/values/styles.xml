<resources>
    <style name="pm_share_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pm_share_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PmCoreTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PmCoreTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PmCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/pm_odk_text</item>
        <item name="android:textSize">@dimen/pm_text_normal</item>
        <item name="colorControlNormal">@color/pm_odk_checkbox_default</item>
        <item name="colorControlActivated">@color/pm_odk_checkbox_active</item>
    </style>

    <style name="PmRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/pm_odk_text</item>
        <item name="android:textSize">@dimen/pm_text_normal</item>
        <item name="colorControlNormal">@color/pm_odk_checkbox_default</item>
        <item name="colorControlActivated">@color/pm_odk_checkbox_active</item>
    </style>

    <style name="PmCustomCalendarTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/pm_calendar_date</item>
    </style>
    <style name="PmCustomCalendarTextAppearanceMonth" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/pm_calendar_month</item>
    </style>
    <style name="PmCustomCalendarTextAppearanceWeek" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/pm_calendar_week</item>
    </style>
</resources>
