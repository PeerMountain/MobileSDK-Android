<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
             tools:background="@drawable/pm_bkg"
             tools:activity="com.peermountain.sdk.ui.register.ConfirmationAccountFragment">

    <ImageView
        android:id="@+id/ivCheck"
        style="@style/pm_sonar"
        android:visibility="visible"/>

    <com.peermountain.core.views.PeerMountainTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pm_margin_big"
        android:gravity="center"
        android:text="@string/pm_lbl_confirm_title"
        android:textColor="@color/pm_text_color"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <com.peermountain.core.views.PeerMountainTextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pm_margin_normal"
        android:layout_marginRight="@dimen/pm_margin_normal"
        android:gravity="center"
        android:text="@string/pm_lbl_confirm_msg"
        android:textColor="@color/pm_text_color"
        android:textSize="20sp"
        android:visibility="visible"/>
</LinearLayout>
