<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/pm_margin_normal"
             android:layout_marginRight="@dimen/pm_margin_normal"
             android:layout_marginBottom="@dimen/pm_margin_normal"
             android:background="@android:color/white"
             tools:activity="com.peermountain.sdk.ui.authorized.contacts.MyQrCodeFragment">

    <ImageView
        android:id="@+id/ivQrCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/pbPmProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>
